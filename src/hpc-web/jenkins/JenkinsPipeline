pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
		dir ('/src/') { 
	            sh 'mvn -B -DskipTests clean package -Pdev'
		}            
		dir ('/src/hpc-web') { 
	            sh 'mvn -B -DskipTests clean package -Pdev'
		}            
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deploy.sh'
            }
        }
    }
}
