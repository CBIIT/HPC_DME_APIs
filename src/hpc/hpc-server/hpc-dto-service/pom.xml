<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<name>HPC Services Data Transfer Objects (DTO)</name>
	<parent>
		<groupId>gov.nih.nci.hpc</groupId>
		<artifactId>hpc-server</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>hpc-dto-service</artifactId>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>xjc-build</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-schema</id>
						<phase>initialize</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>xjc-build/schema</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources/schema</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-dto-types</id>
						<phase>initialize</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>hpc-dto-types</artifactId>
									<version>${project.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>xjc-build</outputDirectory>
									<includes>**/HpcDataTypes.xsd,**/hpc-dto-import-types-jaxb-binding.xjb</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
    			<groupId>org.apache.cxf</groupId>
    			<artifactId>cxf-xjc-plugin</artifactId>
    			<configuration>
        			<extensions>
            			<extension>org.apache.cxf.xjcplugins:cxf-xjc-dv:3.0.2</extension>
        			</extensions>
    			</configuration>
    			<executions>
        			<execution>
            			<id>generate-sources</id>
            			<phase>generate-sources</phase>
            			<goals>
                			<goal>xsdtojava</goal>
            			</goals>
            			<configuration>
                			<xsdOptions>
                				<xsdOption>
                        			<xsd>xjc-build/schema/service/HpcDatasetsRegistration.xsd</xsd>
                        			<packagename>gov.nih.nci.hpc.dto.service</packagename>
                        			<bindingFile>xjc-build/schema/types/hpc-dto-import-types-jaxb-binding.xjb</bindingFile>
                    			</xsdOption>
                			</xsdOptions>
            			</configuration>
        			</execution>
    			</executions>
			</plugin>			
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>
							gov.nih.nci.hpc.dto.service
						</Export-Package>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>hpc-dto-types</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
		
</project>