<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
			xmlns:hpc-domain-user="http://hpc.nci.nih.gov/domain/user"
    		targetNamespace="http://hpc.nci.nih.gov/domain/user"
    		elementFormDefault="unqualified">
	
	<xsd:simpleType name="HpcDataTransferType">
  		<xsd:restriction base="xsd:string">
    		<xsd:enumeration value="GLOBUS"/>
  		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:complexType name="HpcDataTransferAccount">
  	    <xsd:sequence>
  	        <xsd:element name="username" type="xsd:string"/>
  			<xsd:element name="password" type="xsd:string"/>
  			<xsd:element name="dataTransferType" 
  			             type="hpc-domain-user:HpcDataTransferType"/>
    	</xsd:sequence>
    </xsd:complexType>
    
	<xsd:complexType name="HpcUser">
  	    	<xsd:sequence>
  	        	<xsd:element name="nihUserId" type="xsd:string"/>
  				<xsd:element name="firstName" type="xsd:string"/>
  				<xsd:element name="lastName" type="xsd:string"/>
      			<xsd:element name="dataTransferAcount" 
      			             type="hpc-domain-user:HpcDataTransferAccount"/>
    		</xsd:sequence>
    </xsd:complexType>

</xsd:schema>
