<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
	xmlns:hpc-domain-dataset="http://hpc.nci.nih.gov/domain/dataset"
	xmlns:hpc-domain-metadata="http://hpc.nci.nih.gov/domain/metadata"
	targetNamespace="http://hpc.nci.nih.gov/domain/dataset"
	elementFormDefault="unqualified">

	<xsd:import namespace="http://hpc.nci.nih.gov/domain/metadata"
		        schemaLocation="HpcMetadataTypes.xsd" />

	<xsd:simpleType name="HpcFileType">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="UNKONWN" />
			<xsd:enumeration value="RAW_SEQUENCING" />
			<xsd:enumeration value="FASTQ" />
			<xsd:enumeration value="BAM" />
			<xsd:enumeration value="MD5SUM" />
			<xsd:enumeration value="BAI" />
			<xsd:enumeration value="PDF" />
		</xsd:restriction>
	</xsd:simpleType>

	<xsd:simpleType name="HpcDataTransferStatus">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="UNKONWN" />
			<xsd:enumeration value="INITIATED" />
			<xsd:enumeration value="IN_PROGRESS" />
			<xsd:enumeration value="COMPLETED" />
			<xsd:enumeration value="FAILED" />
			<xsd:enumeration value="ERROR" />
		</xsd:restriction>
	</xsd:simpleType>

	<xsd:simpleType name="HpcDatasetUserAssociation">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="PRINCIPAL_INVESTIGATOR" />
			<xsd:enumeration value="CREATOR" />
			<xsd:enumeration value="REGISTRAR" />
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:complexType name="HpcDataTransferReport">
		<xsd:sequence>
			<xsd:element name="taskID" type="xsd:string" />
			<xsd:element name="taskType" type="xsd:string" />
			<xsd:element name="status" type="xsd:string" />
			<xsd:element name="requestTime" type="xsd:dateTime" />
			<xsd:element name="deadline" type="xsd:dateTime" />
			<xsd:element name="completionTime" type="xsd:dateTime" />
			<xsd:element name="totalTasks" type="xsd:int" />
			<xsd:element name="tasksSuccessful" type="xsd:int" />
			<xsd:element name="tasksExpired" type="xsd:int" />
			<xsd:element name="tasksCanceled" type="xsd:int" />
			<xsd:element name="tasksFailed" type="xsd:int" />
			<xsd:element name="tasksPending" type="xsd:int" />
			<xsd:element name="tasksRetrying" type="xsd:int" />
			<xsd:element name="command" type="xsd:string" />
			<xsd:element name="sourceEndpoint" type="xsd:string" />
			<xsd:element name="destinationEndpoint" type="xsd:string" />
			<xsd:element name="dataEncryption" type="xsd:boolean" />
			<xsd:element name="checksumVerification" type="xsd:boolean" />
			<xsd:element name="delete" type="xsd:boolean" />
			<xsd:element name="files" type="xsd:int" />
			<xsd:element name="filesSkipped" type="xsd:int" />
			<xsd:element name="directories" type="xsd:int" />
			<xsd:element name="expansions" type="xsd:int" />
			<xsd:element name="bytesTransferred" type="xsd:long" />
			<xsd:element name="bytesChecksummed" type="xsd:long" />
			<xsd:element name="effectiveMbitsPerSec" type="xsd:double" />
			<xsd:element name="faults" type="xsd:int" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcFileLocation">
		<xsd:sequence>
			<xsd:element name="endpoint" type="xsd:string" />
			<xsd:element name="path" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcDataTransferLocations">
		<xsd:sequence>
			<xsd:element name="source" type="hpc-domain-dataset:HpcFileLocation" />
			<xsd:element name="destination" type="hpc-domain-dataset:HpcFileLocation" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcDataTransferRequest">
		<xsd:sequence>
			<xsd:element name="requesterNciUserId" type="xsd:string" />
			<xsd:element name="fileId" type="xsd:ID" />
			<xsd:element name="dataTransferId" type="xsd:string" />
			<xsd:element name="locations"
				         type="hpc-domain-dataset:HpcDataTransferLocations" />
			<xsd:element name="status"
				         type="hpc-domain-dataset:HpcDataTransferStatus" />
			<xsd:element name="report"
				         type="hpc-domain-dataset:HpcDataTransferReport" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcFileUploadRequest">
		<xsd:sequence>
			<xsd:element name="type" type="hpc-domain-dataset:HpcFileType" />
			<xsd:element name="locations"
				         type="hpc-domain-dataset:HpcDataTransferLocations" />
			<xsd:element name="metadata"
				         type="hpc-domain-metadata:HpcFilePrimaryMetadata" />
			<xsd:element name="projectIds" type="xsd:ID" 
				         minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcFile">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:ID" />
			<xsd:element name="type" type="hpc-domain-dataset:HpcFileType" />
			<xsd:element name="size" type="xsd:double" />
			<xsd:element name="created" type="xsd:dateTime" />
			<xsd:element name="source" type="hpc-domain-dataset:HpcFileLocation" />
			<xsd:element name="location" type="hpc-domain-dataset:HpcFileLocation" />
			<xsd:element name="metadata" type="hpc-domain-metadata:HpcFileMetadata" />
			<xsd:element name="projectIds" type="xsd:ID" 
				         minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcFileSet">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="description" type="xsd:string" />
			<xsd:element name="comments" type="xsd:string" />
			<xsd:element name="files" type="hpc-domain-dataset:HpcFile"
				         minOccurs="0" maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataManagementEntity">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:int" />
			<xsd:element name="path" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>
