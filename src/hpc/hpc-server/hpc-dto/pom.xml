<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<name>HPC Data Transfer Objects (DTO)</name>
	<parent>
		<groupId>gov.nih.nci.hpc</groupId>
		<artifactId>hpc-server</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>hpc-dto</artifactId>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
    			<groupId>org.apache.cxf</groupId>
    			<artifactId>cxf-xjc-plugin</artifactId>
    			<configuration>
        			<extensions>
            			<extension>org.apache.cxf.xjcplugins:cxf-xjc-dv:3.0.2</extension>
        			</extensions>
    			</configuration>
    			<executions>
        			<execution>
            			<id>generate-sources</id>
            			<phase>generate-sources</phase>
            			<goals>
                			<goal>xsdtojava</goal>
            			</goals>
            			<configuration>
                			<xsdOptions>
                    			<xsdOption>
                        			<xsd>src/main/resources/schema/types/HpcDatasetTypes.xsd</xsd>
                        			<packagename>gov.nih.nci.hpc.dto.types</packagename>
                        			<bindingFile>src/main/resources/schema/hpc-dto-types-jaxb-binding.xjb</bindingFile>
                    			</xsdOption>
                    			<xsdOption>
                        			<xsd>src/main/resources/schema/api/HpcDatasetsRegistration.xsd</xsd>
                        			<packagename>gov.nih.nci.hpc.dto.api</packagename>
                        			<bindingFile>src/main/resources/schema/hpc-dto-import-types-jaxb-binding.xjb</bindingFile>
                    			</xsdOption>
                    			<xsdOption>
                        			<xsd>src/main/resources/schema/domain/HpcManagedDatasets.xsd</xsd>
                        			<packagename>gov.nih.nci.hpc.dto.domain</packagename>
                        			<bindingFile>src/main/resources/schema/hpc-dto-import-types-jaxb-binding.xjb</bindingFile>
                    			</xsdOption>
                			</xsdOptions>
            			</configuration>
        			</execution>
    			</executions>
			</plugin>			
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>
							gov.nih.nci.hpc.exception,
							gov.nih.nci.hpc.dto
						</Export-Package>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxrs</artifactId>
		</dependency>
	</dependencies>
</project>