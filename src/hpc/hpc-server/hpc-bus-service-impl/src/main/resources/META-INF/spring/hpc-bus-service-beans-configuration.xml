<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- HPC Business Services Beans -->
	<bean id="hpcUserBusService" class="gov.nih.nci.hpc.bus.impl.HpcUserBusServiceImpl">
		<constructor-arg ref="hpcUserService" />
	</bean>

	<bean id="hpcDatasetBusService" class="gov.nih.nci.hpc.bus.impl.HpcDatasetBusServiceImpl">
		<constructor-arg ref="hpcDatasetService" />
		<constructor-arg ref="hpcUserService" />
		<constructor-arg ref="hpcDataTransferService" />
		<constructor-arg ref="hpcTransferStatusService" />
	</bean>
	
	<bean id="hpcProjectBusService" class="gov.nih.nci.hpc.bus.impl.HpcProjectBusServiceImpl">
		<constructor-arg ref="hpcProjectService" />
		<constructor-arg ref="hpcUserService" />
		<constructor-arg ref="hpcDatasetBusService" />
	</bean>

	<bean id="hpcTransferStatusBusService" class="gov.nih.nci.hpc.bus.impl.HpcTransferStatusBusServiceImpl">
		<constructor-arg ref="hpcTransferStatusService" />
	</bean>

</beans>