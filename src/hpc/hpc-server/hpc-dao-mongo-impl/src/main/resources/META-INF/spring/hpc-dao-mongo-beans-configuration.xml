<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	     
	<!--  HPC Codecs -->
	<bean id="hpcManagedDatasetsCodec" class="gov.nih.nci.hpc.dao.mongo.codec.HpcManagedDatasetsCodec"/>
	<bean id="hpcDatasetCodec" class="gov.nih.nci.hpc.dao.mongo.codec.HpcDatasetCodec"/>
	<bean id="hpcDatasetLocationCodec" class="gov.nih.nci.hpc.dao.mongo.codec.HpcDatasetLocationCodec"/>
	
	<!--  HPC Codec Provider -->
	<bean id="hpcCodecProvider" class="gov.nih.nci.hpc.dao.mongo.codec.HpcCodecProvider">
		<constructor-arg>
			<map>
				<entry key="gov.nih.nci.hpc.domain.HpcManagedDatasets" value-ref="hpcManagedDatasetsCodec"/>
				<entry key="gov.nih.nci.hpc.dto.types.HpcDataset" value-ref="hpcDatasetCodec"/>
				<entry key="gov.nih.nci.hpc.dto.types.HpcDatasetLocation" value-ref="hpcDatasetLocationCodec"/>
			</map>
		</constructor-arg>
	</bean>
 	<!-- HPC DAO Implementation Beans -->
	<bean id="hpcManagedDatasetsDAO" class="gov.nih.nci.hpc.dao.mongo.impl.HpcManagedDatasetsDAOImpl">
		<constructor-arg value="${hpc.dao.mongo.server.host}" index="0"/>
		<constructor-arg ref="hpcCodecProvider" index="1"/>
	</bean>

</beans>