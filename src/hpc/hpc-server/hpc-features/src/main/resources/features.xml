<features name="HPC-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">
    
    <!-- Mongo DB Async Driver -->
    <feature name="hpc-mongo-async-driver" version="${mongodb.version}">
    	<bundle>mvn:org.mongodb/mongodb-driver-async/${mongodb.version}</bundle>
    	<bundle>mvn:org.mongodb/mongodb-driver-core/${mongodb.version}</bundle>
    	<bundle>mvn:org.mongodb/bson/${mongodb.version}</bundle>
    </feature>
    
    <!-- HPC API Server -->  
    <feature name="hpc-server" version="${project.version}">
    	<feature version="${mongodb.version}">hpc-mongo-async-driver</feature>
    
        <bundle>mvn:${project.groupId}/hpc-dto/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/hpc-dao-api/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/hpc-dao-mongo-impl/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/hpc-service-api/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/hpc-service-impl/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/hpc-deploy-rs-api/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/hpc-deploy-rs-impl/${project.version}</bundle>
    </feature>
    
</features>
