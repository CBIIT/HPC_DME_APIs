<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:ctx="http://www.springframework.org/schema/context" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                        http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
                        http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- HPC Application Services OSGi Properties -->
	<osgix:cm-properties id="preProps" persistent-id="gov.nih.nci.hpc">

	</osgix:cm-properties>

	<ctx:property-placeholder properties-ref="preProps" />

	<!-- OSGi beans export -->
	<osgi:service ref="hpcUserService" 
	              interface="gov.nih.nci.hpc.service.HpcUserService" />
	<osgi:service ref="hpcLdapAuthenticationService" 
	              interface="gov.nih.nci.hpc.service.HpcLdapAuthenticationService" />
	<osgi:service ref="hpcDatasetService"
		          interface="gov.nih.nci.hpc.service.HpcDatasetService" />
	<osgi:service ref="hpcDataTransferService"
		          interface="gov.nih.nci.hpc.service.HpcDataTransferService" />
	<osgi:service ref="hpcTransferStatusService"
		          interface="gov.nih.nci.hpc.service.HpcTransferStatusService" />		          
	<osgi:service ref="hpcProjectService"
		          interface="gov.nih.nci.hpc.service.HpcProjectService" />	

	<!-- OSGi beans import -->
	<osgi:reference id="hpcUserDAO" 
	                interface="gov.nih.nci.hpc.dao.HpcUserDAO" />
	<osgi:reference id="hpcDatasetDAO" 
	                interface="gov.nih.nci.hpc.dao.HpcDatasetDAO" />
	<osgi:reference id="hpcDataTransferProxy"
		            interface="gov.nih.nci.hpc.integration.HpcDataTransferProxy" />
	<osgi:reference id="hpcLdapAuthenticationProxy"
		            interface="gov.nih.nci.hpc.integration.HpcLdapAuthenticationProxy" />
	<osgi:reference id="hpcDataTransferAccountValidatorProvider"
		            interface="gov.nih.nci.hpc.integration.HpcDataTransferAccountValidatorProvider" />
	<osgi:reference id="transferStatusDAO" 
					interface="gov.nih.nci.hpc.dao.HpcTransferStatusDAO" />
	<osgi:reference id="hpcProjectDAO" 
					interface="gov.nih.nci.hpc.dao.HpcProjectDAO" />					
</beans>
