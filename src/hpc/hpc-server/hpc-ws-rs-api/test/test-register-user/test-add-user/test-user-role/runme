# Script to run this test
# Usage: runme [no arguments]

#import common functions
source $HPC_DM_TEST/utils/functions

#Run common script
$HPC_DM_TEST/utils/runtest


RESPONSE_HEADER=response-header
RESPONSE_MSG=response-message.json
SERVER=`cat $HPC_DM_TEST/utils/server`

curl -H "Content-Type: application/json" -d @input.json.tmp -X PUT ${SERVER}/user  --config $HPC_DM_TEST/utils/config  -H "Accept: application/json" -D $RESPONSE_HEADER -o $RESPONSE_MSG -s 2> curl-status 
#echo "curl -H \"Content-Type: application/json\" -d @input.json.tmp -X PUT ${SERVER}/user  --config $HPC_DM_TEST/utils/config  -H \"Accept: application/json\" -D $RESPONSE_HEADER -o $RESPONSE_MSG -s 2> curl-status "

check_connection $RESPONSE_HEADER

RESPONSE_CODE=`get_http_code $RESPONSE_HEADER`

echo $RESPONSE_CODE 
