	<properties>
		<cxf.version>3.1.5</cxf.version>
		<cxf-xjc.version>3.0.5</cxf-xjc.version>
		<postgresql.version>9.3-1102-jdbc41</postgresql.version>
		<slf4j.version>1.7.22</slf4j.version>
