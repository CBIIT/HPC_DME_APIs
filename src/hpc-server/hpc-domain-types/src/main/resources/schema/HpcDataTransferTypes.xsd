<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
	xmlns:hpc-domain-datatransfer="http://hpc.nci.nih.gov/domain/datatransfer"
	targetNamespace="http://hpc.nci.nih.gov/domain/datatransfer"
	elementFormDefault="unqualified">

	<xsd:simpleType name="HpcDataTransferUploadStatus">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="IN_PROGRESS_TO_TEMPORARY_ARCHIVE" />
			<xsd:enumeration value="IN_TEMPORARY_ARCHIVE" />
			<xsd:enumeration value="IN_PROGRESS_TO_ARCHIVE" />
			<xsd:enumeration value="ARCHIVED" />
			<xsd:enumeration value="FAILED" />
			<xsd:enumeration value="UNKNOWN" />
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:simpleType name="HpcDataTransferDownloadStatus">
		<xsd:restriction base="xsd:string">
		    <xsd:enumeration value="IN_PROGRESS" />
			<xsd:enumeration value="COMPLETED" />
			<xsd:enumeration value="FAILED" />
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:simpleType name="HpcDataTransferType">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="GLOBUS" />
			<xsd:enumeration value="S3" />
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:simpleType name="HpcArchiveType">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="TEMPORARY_ARCHIVE" />
			<xsd:enumeration value="ARCHIVE" />
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:complexType name="HpcGlobusDataTransferReport">
		<xsd:sequence>
			<xsd:element name="status" type="xsd:string" />
			<xsd:element name="nice_status" type="xsd:string" />
			<xsd:element name="bytesTransferred" type="xsd:long" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcFileLocation">
		<xsd:sequence>
			<xsd:element name="fileContainerId" type="xsd:string" />
			<xsd:element name="fileId" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcArchive">
		<xsd:sequence>
			<xsd:element name="fileLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="type" type="hpc-domain-datatransfer:HpcArchiveType" />
			<xsd:element name="directory" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcFile"/>
	
	<xsd:complexType name="HpcDataObjectUploadRequest">
		<xsd:sequence>
			<xsd:element name="path" type="xsd:string" />
			<xsd:element name="callerObjectId" type="xsd:string" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="sourceLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="sourceFile" type="hpc-domain-datatransfer:HpcFile" />
			<xsd:element name="doc" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectUploadResponse">
		<xsd:sequence>
			<xsd:element name="dataTransferRequestId" type="xsd:string" />
			<xsd:element name="checksum" type="xsd:string" />
			<xsd:element name="archiveLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="dataTransferStatus" type="hpc-domain-datatransfer:HpcDataTransferUploadStatus" />
			<xsd:element name="dataTransferType" type="hpc-domain-datatransfer:HpcDataTransferType" />
			<xsd:element name="dataTransferStarted" type="xsd:dateTime" />
			<xsd:element name="dataTransferCompleted" type="xsd:dateTime" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectDownloadRequest">
		<xsd:sequence>
			<xsd:element name="path" type="xsd:string" />
			<xsd:element name="dataTransferType" type="hpc-domain-datatransfer:HpcDataTransferType" />
			<xsd:element name="archiveLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="destinationLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="destinationFile" type="hpc-domain-datatransfer:HpcFile" />
			<xsd:element name="doc" type="xsd:string" />
			<xsd:element name="collectionDownload" type="xsd:boolean" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectDownloadResponse">
		<xsd:sequence>
		    <xsd:element name="downloadTaskId" type="xsd:int" minOccurs="0" />
			<xsd:element name="dataTransferRequestId" type="xsd:string" />
			<xsd:element name="destinationLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="destinationFile" type="hpc-domain-datatransfer:HpcFile" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectDownloadTask">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:int" minOccurs="0" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="path" type="xsd:string" />
			<xsd:element name="doc" type="xsd:string" />
			<xsd:element name="dataTransferRequestId" type="xsd:string" />
			<xsd:element name="dataTransferType" type="hpc-domain-datatransfer:HpcDataTransferType" />
			<xsd:element name="downloadFilePath" type="xsd:string" />
			<xsd:element name="destinationLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="created" type="xsd:dateTime" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectDownloadTaskResult">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:int" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="path" type="xsd:string" />
			<xsd:element name="doc" type="xsd:string" />
			<xsd:element name="dataTransferRequestId" type="xsd:string" />
			<xsd:element name="dataTransferType" type="hpc-domain-datatransfer:HpcDataTransferType" />
			<xsd:element name="destinationLocation" type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="result" type="xsd:boolean" />
			<xsd:element name="message" type="xsd:string" />
			<xsd:element name="created" type="xsd:dateTime" />
			<xsd:element name="completed" type="xsd:dateTime" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectDownloadTaskStatus">
		<xsd:sequence>
			<xsd:element name="inProgress" type="xsd:boolean" />
			<xsd:element name="task" type="hpc-domain-datatransfer:HpcDataObjectDownloadTask" />
			<xsd:element name="result" type="hpc-domain-datatransfer:HpcDataObjectDownloadTaskResult" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>
