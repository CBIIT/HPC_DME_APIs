<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
	xmlns:hpc-domain-datamigration="http://hpc.nci.nih.gov/domain/datamigration"
	targetNamespace="http://hpc.nci.nih.gov/domain/datamigration"
	elementFormDefault="unqualified">

	<xsd:simpleType name="HpcDataMigrationStatus">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="RECEIVED" />
			<xsd:enumeration value="IN_PROGRESS" />
		</xsd:restriction>
	</xsd:simpleType>

	<xsd:simpleType name="HpcDataMigrationType">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="DATA_OBJECT" />
			<xsd:enumeration value="COLLECTION" />
		</xsd:restriction>
	</xsd:simpleType>

	<xsd:simpleType name="HpcDataMigrationResult">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="COMPLETED" />
			<xsd:enumeration value="FAILED" />
			<xsd:enumeration value="IGNORED" />
		</xsd:restriction>
	</xsd:simpleType>

	<xsd:complexType name="HpcDataMigrationTask">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:string" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="path" type="xsd:string" />
			<xsd:element name="configurationId" type="xsd:string" />
			<xsd:element name="fromS3ArchiveConfigurationId"
				type="xsd:string" />
			<xsd:element name="toS3ArchiveConfigurationId"
				type="xsd:string" />
			<xsd:element name="type"
				type="hpc-domain-datamigration:HpcDataMigrationType" />
			<xsd:element name="status"
				type="hpc-domain-datamigration:HpcDataMigrationStatus" />
			<xsd:element name="created" type="xsd:dateTime" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>
