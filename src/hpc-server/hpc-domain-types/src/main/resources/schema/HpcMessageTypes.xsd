<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
	xmlns:hpc-domain-message="http://hpc.nci.nih.gov/domain/message"
	targetNamespace="http://hpc.nci.nih.gov/domain/message"
	elementFormDefault="unqualified">
	
	<xsd:simpleType name="HpcMessageQueue">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="startGlobusDataObjectDownloadQueue" />
			<xsd:enumeration value="startS3DataObjectDownloadQueue" />
			<xsd:enumeration value="startGoogleDriveDataObjectDownloadQueue" />
			<xsd:enumeration value="processCollectionDownloadQueue" />
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:complexType name="HpcTaskMessage">
		<xsd:sequence>
			<xsd:element name="taskId" type="xsd:string" />
			<xsd:element name="user" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>
</xsd:schema>
