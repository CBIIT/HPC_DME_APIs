<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
	xmlns:hpc-domain-datamanagement="http://hpc.nci.nih.gov/domain/datamanagement"
	xmlns:hpc-domain-metadata="http://hpc.nci.nih.gov/domain/metadata"
	xmlns:hpc-domain-datatransfer="http://hpc.nci.nih.gov/domain/datatransfer"
	xmlns:hpc-domain-model="http://hpc.nci.nih.gov/domain/model"
	targetNamespace="http://hpc.nci.nih.gov/domain/model"
	elementFormDefault="unqualified">
	
	<xsd:import namespace="http://hpc.nci.nih.gov/domain/datamanagement"
		        schemaLocation="HpcDataManagementTypes.xsd" />
	<xsd:import namespace="http://hpc.nci.nih.gov/domain/metadata"
		        schemaLocation="HpcMetadataTypes.xsd" />
	<xsd:import namespace="http://hpc.nci.nih.gov/domain/datatransfer"
		        schemaLocation="HpcDataTransferTypes.xsd" />

	<xsd:element name="HpcDocConfiguration">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="doc" type="xsd:string" />
			    <xsd:element name="basePath" type="xsd:string" />
			    <xsd:element name="s3URL" type="xsd:string" />
			    <xsd:element name="s3BaseArchiveDestination" type="hpc-domain-datatransfer:HpcArchive" />
				<xsd:element name="collectionMetadataValidationRules"
				             type="hpc-domain-metadata:HpcMetadataValidationRule"
					         minOccurs="0" maxOccurs="unbounded" />
				<xsd:element name="dataObjectMetadataValidationRules"
				             type="hpc-domain-metadata:HpcMetadataValidationRule"
					         minOccurs="0" maxOccurs="unbounded" />
				<xsd:element name="dataHierarchy"
				             type="hpc-domain-datamanagement:HpcDataHierarchy" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>	
	
	<xsd:complexType name="HpcDataObjectRegistrationRequest">
		<xsd:sequence>
			<xsd:element name="source"
			             type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="callerObjectId" type="xsd:string" />
			<xsd:element name="metadataEntries" 
			             type="hpc-domain-metadata:HpcMetadataEntry" 
				         maxOccurs="unbounded" />
			<xsd:element name="createParentCollections" type="xsd:boolean" minOccurs="0" />
			<xsd:element name="parentCollectionMetadataEntries" 
			             type="hpc-domain-metadata:HpcMetadataEntry" 
				         maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectListRegistrationItem">
		<xsd:sequence>
			<xsd:element name="task" type="hpc-domain-datamanagement:HpcDataObjectRegistrationTaskItem" />
			<xsd:element name="request" type="hpc-domain-model:HpcDataObjectRegistrationRequest" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectListRegistrationTask">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:string" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="doc" type="xsd:string" />
			<xsd:element name="status" type="hpc-domain-datamanagement:HpcDataObjectListRegistrationTaskStatus" />
			<xsd:element name="created" type="xsd:dateTime" />
			<xsd:element name="items" type="hpc-domain-model:HpcDataObjectListRegistrationItem" 
			             minOccurs="0" maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectListRegistrationResult">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:string" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="result" type="xsd:boolean" />
			<xsd:element name="message" type="xsd:string" />
			<xsd:element name="created" type="xsd:dateTime" />
			<xsd:element name="completed" type="xsd:dateTime" />
			<xsd:element name="items" type="hpc-domain-model:HpcDataObjectListRegistrationItem" 
			             minOccurs="0" maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HpcDataObjectListRegistrationStatus">
		<xsd:sequence>
			<xsd:element name="inProgress" type="xsd:boolean" />
			<xsd:element name="task" type="hpc-domain-model:HpcDataObjectListRegistrationTask" />
			<xsd:element name="result" type="hpc-domain-model:HpcDataObjectListRegistrationResult" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>
