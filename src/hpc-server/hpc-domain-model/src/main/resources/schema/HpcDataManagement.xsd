<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" jxb:version="1.0"
	xmlns:hpc-domain-datamanagement="http://hpc.nci.nih.gov/domain/datamanagement"
	xmlns:hpc-domain-metadata="http://hpc.nci.nih.gov/domain/metadata"
	xmlns:hpc-domain-datatransfer="http://hpc.nci.nih.gov/domain/datatransfer"
	xmlns:hpc-domain-model="http://hpc.nci.nih.gov/domain/model"
	targetNamespace="http://hpc.nci.nih.gov/domain/model"
	elementFormDefault="unqualified">

	<xsd:import namespace="http://hpc.nci.nih.gov/domain/datamanagement"
		schemaLocation="HpcDataManagementTypes.xsd" />
	<xsd:import namespace="http://hpc.nci.nih.gov/domain/metadata"
		schemaLocation="HpcMetadataTypes.xsd" />
	<xsd:import namespace="http://hpc.nci.nih.gov/domain/datatransfer"
		schemaLocation="HpcDataTransferTypes.xsd" />

	<!--  2-hop REMOVE -->
	<xsd:complexType name="HpcDataTransferConfiguration">
		<xsd:sequence>
			<xsd:element name="url" type="xsd:string" />
			<xsd:element name="baseArchiveDestination" type="hpc-domain-datatransfer:HpcArchive" />
			<xsd:element name="baseDownloadSource" type="hpc-domain-datatransfer:HpcArchive" />
			<xsd:element name="uploadRequestURLExpiration" type="xsd:int"
				minOccurs="0" />
		</xsd:sequence>
	</xsd:complexType>
	
		<xsd:complexType name="HpcArchiveDataTransferConfiguration">
		<xsd:sequence>
			<xsd:element name="url" type="xsd:string" />
			<xsd:element name="archiveFileLocation"
				type="hpc-domain-datatransfer:HpcFileLocation" />
			<xsd:element name="archiveDirectory" type="xsd:string" />
			<xsd:element name="uploadRequestURLExpiration" type="xsd:int"
				minOccurs="0" />
		</xsd:sequence>
	</xsd:complexType>
	

	<xsd:element name="HpcDataManagementConfiguration">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="id" type="xsd:string" />
				<xsd:element name="doc" type="xsd:string" />
				<xsd:element name="basePath" type="xsd:string" />
				<xsd:element name="archiveType"
					type="hpc-domain-datatransfer:HpcArchiveType" />
					
				<!--  2-hop REMOVE -->
				<xsd:element name="s3Configuration"
					type="hpc-domain-model:HpcDataTransferConfiguration" />
				<!--  2-hop REMOVE -->
				<xsd:element name="globusConfiguration"
					type="hpc-domain-model:HpcDataTransferConfiguration" />
					
				<xsd:element name="archiveS3Configuration"
					type="hpc-domain-model:HpcArchiveDataTransferConfiguration" />
				<xsd:element name="archiveGlobusConfiguration"
					type="hpc-domain-model:HpcArchiveDataTransferConfiguration" />
				<xsd:element name="collectionMetadataValidationRules"
					type="hpc-domain-metadata:HpcMetadataValidationRule" minOccurs="0"
					maxOccurs="unbounded" />
				<xsd:element name="dataObjectMetadataValidationRules"
					type="hpc-domain-metadata:HpcMetadataValidationRule" minOccurs="0"
					maxOccurs="unbounded" />
				<xsd:element name="dataHierarchy"
					type="hpc-domain-datamanagement:HpcDataHierarchy" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="HpcDataObjectRegistrationRequest">
		<xsd:sequence>
			<xsd:element name="globusUploadSource"
					type="hpc-domain-datatransfer:HpcGlobusUploadSource" />
			<xsd:element name="s3UploadSource"
					type="hpc-domain-datatransfer:HpcS3UploadSource" />
			<xsd:element name="callerObjectId" type="xsd:string" />
			<xsd:element name="metadataEntries" type="hpc-domain-metadata:HpcMetadataEntry"
				maxOccurs="unbounded" />
			<xsd:element name="createParentCollections" type="xsd:boolean"
				minOccurs="0" />
			<xsd:element name="parentCollectionsBulkMetadataEntries"
				type="hpc-domain-metadata:HpcBulkMetadataEntries" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcBulkDataObjectRegistrationItem">
		<xsd:sequence>
			<xsd:element name="task"
				type="hpc-domain-datamanagement:HpcDataObjectRegistrationTaskItem" />
			<xsd:element name="request"
				type="hpc-domain-model:HpcDataObjectRegistrationRequest" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcBulkDataObjectRegistrationTask">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:string" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="uiURL" type="xsd:string" />
			<xsd:element name="status"
				type="hpc-domain-datamanagement:HpcBulkDataObjectRegistrationTaskStatus" />
			<xsd:element name="created" type="xsd:dateTime" />
			<xsd:element name="items"
				type="hpc-domain-model:HpcBulkDataObjectRegistrationItem" minOccurs="0"
				maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcBulkDataObjectRegistrationResult">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:string" />
			<xsd:element name="userId" type="xsd:string" />
			<xsd:element name="result" type="xsd:boolean" />
			<xsd:element name="message" type="xsd:string" />
			<xsd:element name="created" type="xsd:dateTime" />
			<xsd:element name="completed" type="xsd:dateTime" />
			<xsd:element name="effectiveTransferSpeed" type="xsd:int"
				minOccurs="0" />
			<xsd:element name="items"
				type="hpc-domain-model:HpcBulkDataObjectRegistrationItem" minOccurs="0"
				maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="HpcBulkDataObjectRegistrationStatus">
		<xsd:sequence>
			<xsd:element name="inProgress" type="xsd:boolean" />
			<xsd:element name="task"
				type="hpc-domain-model:HpcBulkDataObjectRegistrationTask" />
			<xsd:element name="result"
				type="hpc-domain-model:HpcBulkDataObjectRegistrationResult" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>
