<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<name>HPC Domain Model</name>
	<parent>
		<groupId>gov.nih.nci.hpc</groupId>
		<artifactId>hpc-server</artifactId>
		<version>2.18.0</version>
	</parent>
	<artifactId>hpc-domain-model</artifactId>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>${basedir}/xjc-build</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-schema</id>
						<phase>initialize</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/xjc-build/schema</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/src/main/resources/schema</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<!-- The only reason we are declaring the doxia dependency is to 
				be able to exclude struts because it uses version struts 1.3.8 
				which is an issue with NCI security -->
			 	<dependencies>
					<dependency>
         				<groupId>org.apache.maven.doxia</groupId>
         				<artifactId>doxia-site-renderer</artifactId>
         				<version>1.4</version>
         				<exclusions>
            				<exclusion>
               					<groupId>org.apache.struts</groupId>
               					<artifactId>*</artifactId>
            				</exclusion>
         				</exclusions>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>unpack-domain-types</id>
						<phase>initialize</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>hpc-domain-types</artifactId>
									<version>${project.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>xjc-build</outputDirectory>
									<includes>**/*.xsd</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-xjc-plugin</artifactId>
				<configuration>
					<extensions>
						<extension>org.apache.cxf.xjcplugins:cxf-xjc-ts:${cxf-xjc.version}</extension>
						<extension>org.apache.cxf.xjcplugins:cxf-xjc-boolean:${cxf-xjc.version}</extension>
					</extensions>
				</configuration>
				<executions>
					<execution>
						<id>generate-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>xsdtojava</goal>
						</goals>
						<configuration>
							<xsdOptions>
								<xsdOption>
									<xsd>${basedir}/xjc-build/schema/HpcUser.xsd</xsd>
									<packagename>gov.nih.nci.hpc.domain.model</packagename>
									<bindingFile>${basedir}/xjc-build/schema/hpc-domain-user-jaxb-binding.xjb</bindingFile>
									<extensionArgs>
										<arg>-Xts:style:simple</arg>
										<arg>-Xbg</arg>
									</extensionArgs>
								</xsdOption>
								<xsdOption>
									<xsd>${basedir}/xjc-build/schema/HpcMetadata.xsd</xsd>
									<packagename>gov.nih.nci.hpc.domain.model</packagename>
									<bindingFile>${basedir}/xjc-build/schema/hpc-domain-metadata-jaxb-binding.xjb</bindingFile>
									<extensionArgs>
										<arg>-Xts:style:simple</arg>
										<arg>-Xbg</arg>
									</extensionArgs>
								</xsdOption>
								<xsdOption>
									<xsd>${basedir}/xjc-build/schema/HpcDataManagement.xsd</xsd>
									<packagename>gov.nih.nci.hpc.domain.model</packagename>
									<bindingFile>${basedir}/xjc-build/schema/hpc-domain-datamanagement-jaxb-binding.xjb</bindingFile>
									<extensionArgs>
										<arg>-Xts:style:simple</arg>
										<arg>-Xbg</arg>
									</extensionArgs>
								</xsdOption>
								<xsdOption>
									<xsd>${basedir}/xjc-build/schema/HpcDataMigration.xsd</xsd>
									<packagename>gov.nih.nci.hpc.domain.model</packagename>
									<bindingFile>${basedir}/xjc-build/schema/hpc-domain-datamigration-jaxb-binding.xjb</bindingFile>
									<extensionArgs>
										<arg>-Xts:style:simple</arg>
										<arg>-Xbg</arg>
									</extensionArgs>
								</xsdOption>
							</xsdOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>
							gov.nih.nci.hpc.domain.model
						</Export-Package>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>hpc-domain-types</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>
